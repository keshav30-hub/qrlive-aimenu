
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth.uid == 'wxavChRTGxRzNafZILMHCZDnDu52';
    }
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /{document=**} {
      allow read, write: if false;
    }
    
    match /users/{userId} {
      allow get: if true;
      allow list: if isAdmin();
      allow update, delete: if isOwner(userId);
      allow create: if isSignedIn();
    }

    match /businesses/{businessId} {
      allow get: if true;
      allow create: if isSignedIn() && request.resource.data.ownerUid == request.auth.uid;
    }
    
    match /plans/{planId} {
      allow get, list: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /subscriptions/{userId} {
      // User can read their own subscription
      allow get: if isOwner(userId);
      // New user can create their own subscription doc, but ONLY with status 'inactive'
      allow create: if isOwner(userId) && request.resource.data.status == 'inactive';
      // Only server can update to active or delete
      allow update, delete: if false;
    }

    match /payments/{paymentId} {
      // Owner can read their payment doc
      allow get: if isOwner(resource.data.userId);

      // Allow listing payments that belong to the signed-in user
      allow list: if isSignedIn() && request.query.userId == request.auth.uid;

      // Only server can write
      allow create, update, delete: if false;
    }

    match /coupons/{couponId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /notifications/{notificationId} {
      allow get: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /notifications {
        allow list: if isSignedIn();
    }

    match /users/{userId}/menuItems/{itemId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
    
    match /users/{userId}/menuCategories/{categoryId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
    
    match /users/{userId}/combos/{comboId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
    
    match /users/{userId}/events/{eventId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
    
    // New rule to allow public querying of a single event by its unique ID
    match /{path=**}/events/{eventId} {
      allow list: if request.query.keys.hasOnly(['id']) && request.query.id == resource.data.id;
    }

    match /users/{userId}/events/{eventId}/rsvps/{rsvpId} {
      allow read: if isOwner(userId);
      allow create: if true;
      allow write: if isOwner(userId);
    }
    
    match /users/{userId}/tasks/live {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) || request.resource.data.pendingCalls.size() > resource.data.pendingCalls.size();
    }
    
    match /users/{userId}/feedback/{feedbackId} {
      allow create: if true;
      allow read, write, delete: if isOwner(userId);
    }
    
    match /users/{userId}/urgent_feedback/{feedbackId} {
      allow create: if true;
      allow read, delete: if isOwner(userId);
    }

    match /aifa_feedback/{feedbackId} {
        allow create: if true;
        allow read, write, delete: if isAdmin();
    }

    match /supportTickets/{ticketId} {
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.submittedBy;
      allow get: if isOwner(request.resource.data.submittedBy) || isAdmin();
      allow list: if (isSignedIn() && request.query.where.submittedBy == request.auth.uid) || isAdmin();
      allow update: if isAdmin() && request.resource.data.keys().hasOnly(['status']);
      allow delete: if isAdmin();
    }
    
    match /feedback_requests/{requestId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /feedback_responses/{responseId} {
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
      allow read: if isOwner(request.resource.data.userId) || isAdmin();
      allow update, delete: if false;
    }

    match /users/{userId}/staff/{staffId} {
      allow read, write: if isOwner(userId);
    }

    // Rule for the attendance subcollection
    match /users/{userId}/staff/{staffId}/attendance/{attendanceId} {
      allow read, write: if isOwner(userId);
    }
    
    // Rule for public attendance creation via QR scan
    match /users/{userId}/staff/{staffId}/attendance/{attendanceId} {
        allow create: if true;
    }
    
    match /users/{userId}/staff/{staffId}/payroll/{payrollId} {
        allow read, write: if isOwner(userId);
    }
    
    match /users/{userId}/shifts/{shiftId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/{collection}/{docId=**} {
      allow read, write: if isOwner(userId);
    }

    match /mobileVerifications/{verificationId} {
      allow create: if true;
      allow read, delete: if request.auth != null;
    }
    
    match /users/{userId}/activity/{activityId} {
       allow read, write: if isOwner(userId);
       allow delete: if request.time > resource.data.timestamp + duration.value(60, 'd');
    }
  }
}

    