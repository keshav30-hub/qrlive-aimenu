rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is the designated admin.
    function isAdmin() {
      return request.auth.uid == 'wxavChRTGxRzNafZILMHCZDnDu52';
    }
    
    // Helper function to check if the user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the user owns the document.
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Default-deny all reads and writes.
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Users can read/write their own user document.
    // Public read access is allowed so the QR menu can find the restaurant by restaurantId.
    // Admin has full read access to the entire collection.
    match /users/{userId} {
      allow get, list: if isAdmin();
      allow read: if true;
      allow update, delete: if isOwner(userId);
      allow create: if isSignedIn();
    }
    
    // Allow public read access to menu items, categories, and events for the QR menu.
    match /users/{userId}/menuItems/{itemId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
    
    match /users/{userId}/menuCategories/{categoryId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
    
    match /users/{userId}/events/{eventId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    // Allow anyone to create an RSVP for a public event.
    match /users/{userId}/events/{eventId}/rsvps/{rsvpId} {
      allow read: if isOwner(userId); // Only owner can see the full list
      allow create: if true; // Anyone can create an RSVP
      allow write: if isOwner(userId); // Only owner can update/delete
    }
    
    // Allow owner to read/write their tasks, and allow anyone to create a new task.
    match /users/{userId}/tasks/{taskId} {
      allow read, write: if isOwner(userId);
      allow create: if true;
    }
    
    // Allow anyone to submit feedback for a restaurant.
    match /users/{userId}/feedback/{feedbackId} {
      allow create: if true;
      allow read, write, delete: if isOwner(userId);
    }
    
    // Allow anyone to submit feedback for the QRLive app. Admin can read/write.
    match /qrlive-feedback/{feedbackId} {
      allow create: if true;
      allow read, write, delete: if isAdmin();
    }

    // Secure all other user subcollections to be owner-only.
    match /users/{userId}/{collection}/{docId=**} {
      // This rule will not match the more specific rules above.
      allow read, write: if isOwner(userId);
    }

    // This collection is used for public OTP verification and should be writeable by anyone.
    // Documents have an expiry and are cleaned up after verification.
    match /mobileVerifications/{verificationId} {
      allow create: if true;
      allow read, delete: if request.auth != null; // Allow read/delete for signed-in sessions (incl. anonymous)
    }
    
    // Auto-delete activity logs after 60 days
    match /users/{userId}/activity/{activityId} {
       allow read, write: if isOwner(userId);
       allow delete: if request.time > resource.data.timestamp + duration.value(60, 'd');
    }

    // --- New Rules for Admin-managed Collections ---

    // Subscription plans are readable by any signed-in user, but only writable by the admin.
    match /plans/{planId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Notifications are readable by any signed-in user, but only writable by the admin.
    match /notifications/{notificationId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Feedback requests are created by the admin and read by users/public.
    match /feedback_requests/{requestId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Feedback responses can be created by any user, but only read by the admin.
    match /feedback_responses/{responseId} {
      allow create: if isSignedIn();
      allow read, write, delete: if isAdmin();
    }
  }
}

    