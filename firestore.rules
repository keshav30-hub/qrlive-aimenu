
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth.uid == 'wxavChRTGxRzNafZILMHCZDnDu52';
    }
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    match /users/{userId} {
      allow get: if true;
      allow list: if isAdmin();
      allow update, delete: if isOwner(userId);
      allow create: if isSignedIn();
    }
    
    // --- Publicly Readable QR Menu Data ---
    match /users/{userId}/menuCategories/{categoryId} {
        allow get, list: if true;
        allow write: if isOwner(userId);
    }
    match /users/{userId}/menuItems/{itemId} {
        allow get, list: if true;
        allow write: if isOwner(userId);
    }
    match /users/{userId}/combos/{comboId} {
        allow get, list: if true;
        allow write: if isOwner(userId);
    }
    match /users/{userId}/events/{eventId} {
        allow get, list: if true;
        allow write: if isOwner(userId);
    }
     // Allow anyone to submit an RSVP
    match /users/{userId}/events/{eventId}/rsvps/{rsvpId} {
        allow create: if true;
        allow read, write, delete: if isOwner(userId);
    }

    // --- Private User Data ---
    // Rule for all other subcollections that are not public.
    match /users/{userId}/staff/{staffId} { allow read, write: if isOwner(userId); }
    match /users/{userId}/shifts/{shiftId} { allow read, write: if isOwner(userId); }
    match /users/{userId}/staff/{staffId}/attendance/{attendanceId} { allow read, write: if isOwner(userId); }
    match /users/{userId}/staff/{staffId}/payroll/{payrollId} { allow read, write: if isOwner(userId); }
    match /users/{userId}/devices/{deviceId} { allow read, write: if isOwner(userId); }
    match /users/{userId}/tasks/{taskId} { allow read, write: if isOwner(userId); }
    match /users/{userId}/feedback/{feedbackId} { allow read, write: if isOwner(userId); }
    match /users/{userId}/activity/{activityId} { allow read, write: if isOwner(userId); }
    match /users/{userId}/tables/{tableId} { allow read, write: if isOwner(userId); }


    match /businesses/{businessId} {
      allow get: if true;
      allow create: if isSignedIn() && request.resource.data.ownerUid == request.auth.uid;
    }
    
    match /config/{docId} {
      allow get: if isSignedIn();
      allow write: if isAdmin();
    }

    match /admin_events/{eventId} {
      allow read: if true;
      allow write, delete: if isAdmin();
    }
    
    match /plans/{planId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /subscriptions/{userId} {
      allow get: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false;

      match /history/{historyId} {
        allow get, list: if isOwner(userId);
        allow write: if false;
      }
    }

    match /payments/{paymentId} {
      allow get: if isOwner(resource.data.userId);
      allow list: if (isOwner(request.query.userId)) || isAdmin();
      allow create, update, delete: if false;
    }

    match /coupons/{couponId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /notifications/{notificationId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /aifa_feedback/{feedbackId} {
        allow create: if true;
        allow read, write, delete: if isAdmin();
    }
    
    match /urgent_feedback/{feedbackId} {
      allow create: if true; // Public can create
      allow read, delete: if isOwner(userId); // Owner can manage
    }

    match /supportTickets/{ticketId} {
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.submittedBy;
      allow get: if (isSignedIn() && resource.data.submittedBy == request.auth.uid) || isAdmin();
      allow list: if (isSignedIn() && request.query.get("submittedBy") == request.auth.uid) || isAdmin();
      allow update: if isAdmin() && request.resource.data.keys().hasOnly(['status']);
      allow delete: if isAdmin();
    }
    
    match /feedback_requests/{requestId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /feedback_responses/{responseId} {
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
      allow read: if isOwner(request.resource.data.userId) || isAdmin();
      allow update, delete: if false;
    }
    
    match /mobileVerifications/{verificationId} {
      allow create: if true;
      allow read, delete: if isSignedIn();
    }

    match /legal/{docId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    match /qrlive_contact/{contactId} {
      allow get, list: if true; // Allow public read access
      allow write: if isAdmin();
    }

    // This must be the last rule, as it's a catch-all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
