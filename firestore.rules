
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth.uid == 'wxavChRTGxRzNafZILMHCZDnDu52';
    }
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    match /users/{userId} {
      allow get: if true;
      allow list: if isAdmin();
      allow update, delete: if isOwner(userId);
      allow create: if isSignedIn();
    }
    
    // This single rule grants a user full access to all documents in all subcollections
    // under their own user document. This is more secure and scalable than individual rules.
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }

    match /businesses/{businessId} {
      allow get: if true;
      allow create: if isSignedIn() && request.resource.data.ownerUid == request.auth.uid;
    }
    
    match /config/{docId} {
      allow get: if isSignedIn();
      allow write: if isAdmin();
    }

    match /admin_events/{eventId} {
      allow read: if true;
      allow write, delete: if isAdmin();
    }
    
    match /plans/{planId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /subscriptions/{userId} {
      allow get: if isOwner(userId);
      // Allow creation only if the user is setting their initial 'inactive' status.
      allow create: if isOwner(userId) && request.resource.data.status == 'inactive';
      // Allow a user to update ONLY the 'status' field.
      allow update: if isOwner(userId) && request.resource.data.keys().hasOnly(['status']);
      // Prevent users from deleting their subscription.
      allow delete: if false;
    }

    match /payments/{paymentId} {
      allow get: if request.auth != null && request.auth.uid == resource.data.userId;
      allow list: if (request.auth != null && request.query.userId == request.auth.uid) || isAdmin();
      allow create, update, delete: if false;
    }

    match /coupons/{couponId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Public notifications can be read by anyone, but only created by admin
    match /notifications/{notificationId} {
      allow get: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /notifications {
        allow list: if isSignedIn();
    }

    match /aifa_feedback/{feedbackId} {
        allow create: if true;
        allow read, write, delete: if isAdmin();
    }

    match /supportTickets/{ticketId} {
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.submittedBy;
      allow get: if isOwner(request.resource.data.submittedBy) || isAdmin();
      allow list: if (isSignedIn() && request.query.get("submittedBy") == request.auth.uid) || isAdmin();
      allow update: if isAdmin() && request.resource.data.keys().hasOnly(['status']);
      allow delete: if isAdmin();
    }
    
    match /feedback_requests/{requestId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /feedback_responses/{responseId} {
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
      allow read: if isOwner(request.resource.data.userId) || isAdmin();
      allow update, delete: if false;
    }
    
    match /mobileVerifications/{verificationId} {
      allow create: if true;
      allow read, delete: if request.auth != null;
    }

    match /legal/{docId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    match /qrlive_contact/{contactId} {
      allow get, list: if isSignedIn();
      allow write: if isAdmin();
    }

    // This must be the last rule, as it's a catch-all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
