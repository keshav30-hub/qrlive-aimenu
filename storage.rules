
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Allow the authenticated business owner to upload attendance images for their own staff.
    match /users/{userId}/attendance/{staffId}/{date}.jpg {
      allow read, write: if isOwner(userId);
    }
    
    // Allow authenticated users to read and write to their own images folders.
    match /users/{userId}/images/{allPaths=**} {
      allow read, write: if isOwner(userId);
    }

    // Deny all other reads and writes by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
