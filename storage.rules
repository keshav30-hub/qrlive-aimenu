
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Allow anyone to write to the attendance path for a specific user.
    // This is required for the public attendance marking feature.
    // We are matching the specific file name format.
    match /users/{userId}/attendance/{staffId}/{date}.jpg {
      allow create: if true;
      allow read: if isOwner(userId);
    }
    
    // Allow authenticated users to read and write to their own images folders.
    match /users/{userId}/images/{allPaths=**} {
      allow read, write: if isOwner(userId);
    }

    // Deny all other reads and writes by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
